<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondappli"
    tools:context="com.example.gateway.dakpark.Authentification">


    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="700px"
        android:layout_height="400px"
        android:layout_marginRight="50px"
        app:srcCompat="@drawable/logodp"/>

    <EditText
        android:id="@+id/etlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300px"
        android:gravity="center"
        android:hint="   Login    "
        android:paddingTop="5px"
        />
    <EditText
        android:id="@+id/etpasse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:gravity="center"
        android:layout_marginLeft="300px"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/boublie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="400px"
        android:text="mot de passe oublie?"
        android:textColor="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:id="@+id/bconnecter"
        android:layout_width="300px"
        android:layout_height="80px"
        android:text="Se connecter"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_marginLeft="300px"
        android:layout_marginTop="40px"
        android:background="@color/colorAccent"/>
        <Button
            android:id="@+id/binscription"
            android:layout_width="300px"
            android:layout_height="80px"
            android:textAlignment="center"
            android:text="inscription"
            android:layout_marginTop="40px"
            android:layout_marginLeft="300px"
            android:textColor="@android:color/background_light"
            android:background="@color/colorAccent"/>

    </LinearLayout>

</LinearLayout>
